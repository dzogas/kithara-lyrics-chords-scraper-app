<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Κανονικό theme -->
    <style name="Theme.KitharaScraper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.KitharaScraper.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#000000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.KitharaScraper</item>
    </style>

</resources>
